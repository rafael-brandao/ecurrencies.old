<beans:beans xmlns="http://www.springframework.org/schema/integration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:amqp="http://www.springframework.org/schema/integration/amqp" xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-2.1.xsd
       http://www.springframework.org/schema/integration/amqp http://www.springframework.org/schema/integration/amqp/spring-integration-amqp-2.1.xsd">

    <channel id="errorChannel">
        <queue capacity="100" />
    </channel>

    <service-activator expression="headers.RECOVERABLE matches 'true'"
        input-channel="errorChannel" ref="messageAcknowledgeManager" method="rejectAndRequeue" />

    <service-activator expression="headers.RECOVERABLE matches 'false'"
        input-channel="errorChannel" ref="messageAcknowledgeManager" method="reject" />

</beans:beans>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="executorService" interface="java.util.concurrent.ExecutorService" />

    <reference id="errorChannel" interface="org.springframework.integration.core.SubscribableChannel"
        filter="(channel-name=errorChannel)" />

    <reference-list interface="org.springframework.integration.MessageChannel"
        availability="optional"
        filter="(&(channel-name=*)(|(transacted=true)(transacted=false)(!(transacted=*)))(ecurrency-provider=*)(ecurrency-service=*))">
        <reference-listener ref="ecurrencyMessageChannelTracker" bind-method="addedChannel"
            unbind-method="removingChannel" />
    </reference-list>

    <service ref="amqpOutbound" interface="org.springframework.integration.MessageChannel">
        <service-properties>
            <entry key="channel-name" value="amqpOutbound" />
            <entry key="transacted" value="false" />
        </service-properties>
    </service>

</blueprint>